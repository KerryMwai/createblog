<!DOCTYPE html>
<html lang="en">
    <%- include("../partials/head.ejs")  %> 
<body>
<%- include("../partials/nav.ejs")  %> 

    <div class="blogs content">
        <h2>All Blogs</h2>
        <% if(blogs.length>0){%>
            <% blogs.forEach(blog=>{%> 
                <a href="/blogs/<%=blog.id %>" class="single">
                    <h4 class="title"><%=blog.title  %> </h4>
                    <p class="snippet"><%= blog.snippet %> </p>
                </a>
            <% })  %> 
        <% }else{ %> 
            <h5 style="color:brown">There are no blogs to display</h5>
        <% } %> 
    </div>

    <%- include("../partials/foot.ejs")  %> 
</body>
</html>